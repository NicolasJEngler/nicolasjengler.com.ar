<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="Nicolás Joel Engler is a UI/UX designer and front-end developer. Get to know him a little bit better by visiting some of the links in this site">
    <meta name="keywords" content="graphic, design, designer, front-end, frontend, developer, html, css, javascript, jquery, framework, website, web, technology, trends">
    <meta name="author" content="Nicolás Joel Engler">
    <link rel="image_src" href="images/hi.jpg" />
    <link rel="icon" href="favicon.png" type="image/png" />
    <link rel="shortcut icon" href="favicon.ico" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Nicolás J. Engler" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Lato:900|Playfair+Display" %>

    <!-- Analytics tracking code -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-36841035-6', 'auto');
      ga('send', 'pageview');
    </script>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <%= javascript_include_tag 'vendor/jquery-1.12.2.min' %>
    <%= javascript_include_tag 'vendor/jquery.parallaxify.min' %>
    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('sw.js').then(function(reg) {
          console.log('Yey!', reg);
        }).catch(function(err) {
          console.log('Boo!', err);
        });
      }

      var toggleSWStyles = function() {
        var bodyEl = document.getElementById('full-content');
        bodyEl.classList.add('sw-running');
      };

      $.parallaxify();
    </script>
  </body>
</html>
